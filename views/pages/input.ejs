
<%- include('../partials/header') %> 

<section id="input">

    <h2>
        Input
    </h2>


    <div class="section-container">
        <div class="sidebar">

            <nav class="content">
                <a href="">New</a>
                <a href="">Save</a>
                <a href="">Recent</a>
            </nav>
    
        </div>

        <form action="/input" method="post">

            <div class="client-details">
                <div class="customer-name">
                    <label class="customer-label" for="customer-name">Agency Name</label>
                    <input class="customer-data" type="text">
                </div>
    
                <div class="customer-tax">
                    <label class="customer-label" for="customer-name">Agency Tax</label>
                    <input class="customer-data" type="text">
                </div>
            </div>
            
            <div class="table-container">

                <table id="output">
        
                    <tr class="table-head">

                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Unit</th>
                        <th>Mfg Date</th>
                        <th>Expiry Date</th>
                        <th>Purchase</th>
                        <th>Status</th>
        
                    </tr>
        
                    <% for( let index = 0; index < locals.row; index++ ) { %>
                        <%- include('../partials/InputRow') %> 
                    <% } %>


                </table>

            </div>


            <div class="button">
                <a href="/addInputRow" class="form-link">Add Row</a>

                <input class="form-button" type="submit" value="Submit">
            </div>


        </form>

    </div>
</section>

<%- include('../partials/footer') %> 
